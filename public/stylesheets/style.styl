/*
 * Import nib
 */
@import 'nib'

/*
 * Grab a custom font from Google
 */
@import url('http://fonts.googleapis.com/css?family=Quicksand')

/*
 * Nib provides a CSS reset
 */
global-reset()

/*
 * Store the main color and
 * background color as variables
 */
main-color = #fa5b4d
background-color = #faf9f0
text-color = #444
message-banner-color = #add8e6

body
  font-family 'Arial'
  background-color background-color
  color text-color

header
  font-family 'Quicksand'
  padding 25px 10px
  color #fff
  font-size 25px
  text-align center
  width 100%
  position absolute

  /*
   * Note the use of the `main-color`
   * variable and the `darken` function
   */
  background-color main-color
  border-bottom 1px solid darken(main-color, 30%)
  text-shadow 0px -1px 0px darken(main-color, 30%)

.message-banner
  position absolute
  width 100%
  height 40px
  bottom 0px
  background-color message-banner-color
  font-family 'Quicksand'
  font-size 1.2em
  font-weight bold
  text-align center
  line-height 40px
  border-top thin solid darken(message-banner-color, 30%);

  p .error
    color red;

.container
  margin 0 auto
  overflow hidden

.main-content
  height 100%
  margin-top 76px

  #main-viewer
    text-align center
    color lighten(main-color, 50%)
    font-family 'Georgia'
    font-size 50px
    height 100%
    width 100%

  .node
    float left
    border solid thin main-color
    color main-color
    background-color white
    margin 10px
    font-family Arial
    box-shadow 0px 0px 10px 4px rgba(119, 119, 119, 0.75);
    -moz-box-shadow 0px 0px 10px 4px rgba(119, 119, 119, 0.75);
    -webkit-box-shadow 0px 0px 10px 4px rgba(119, 119, 119, 0.75);

    .node-header
      font-size 0.3em
      background main-color
      color background-color
      padding 5px

    .node-body
      font-size 0.25em
      overflow hidden
      padding 5px
      text-align left

  #filters
    position absolute
    height 400px
    right 0
    top 80px
    background-color white

    .filter-header
      font-size 1em
      background main-color
      color background-color
      padding 5px

    .filter-body
      font-size 0.8em
      overflow hidden
      padding 5px
      text-align left


