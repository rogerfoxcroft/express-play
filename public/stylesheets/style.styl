/*
 * Import nib
 */
@import 'nib'

/*
 * Grab a custom font from Google
 */
@import url('http://fonts.googleapis.com/css?family=Quicksand')

/*
 * Nib provides a CSS reset
 */
global-reset()

/*
 * Store the main color and
 * background color as variables
 */
main-color = #fa5b4d
background-color = #faf9f0
text-color = #444
message-banner-color = #add8e6

body
  font-family 'Georgia'
  background-color background-color
  color text-color

header
  font-family 'Quicksand'
  padding 50px 10px
  color #fff
  font-size 25px
  text-align center
  position absolute
  width 100%

  /*
   * Note the use of the `main-color`
   * variable and the `darken` function
   */
  background-color main-color
  border-bottom 1px solid darken(main-color, 30%)
  text-shadow 0px -1px 0px darken(main-color, 30%)

.message-banner
  width 100%
  height 40px
  position absolute
  bottom 0px
  background-color message-banner-color
  font-family 'Quicksand'
  font-size 1.2em
  font-weight bold
  text-align center
  line-height 40px
  border-top thin solid darken(message-banner-color, 30%);

  p .error
    color red;

.container
  margin 0 auto
  overflow hidden

.main-content
  height 100%

  .watermark
    display table
    text-align center
    color lighten(main-color, 50%)
    font-family 'Georgia'
    font-size 50px
    height 100%
    width 100%

  p
    display table-cell
    vertical-align middle
    height 100%
    text-align center
